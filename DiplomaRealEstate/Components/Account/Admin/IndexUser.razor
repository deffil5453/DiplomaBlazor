@page "/indexUser"
@using DiplomaRealEstate.Models
@using DiplomaRealEstate.Services.UserServices
@inject IUserInterface UserServices
@rendermode InteractiveServer
<h3 class="text-center mt-3 mb-3">Пользователи</h3>

<div class="container mt-4">
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Идентификатор</th>
                    <th>Логин</th>
                    <th>ФИО</th>
                    <th>Телефон</th>
                    <th>Действие</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in _userAll)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.UserName</td>
                        <td>@item.LastName @item.FirstName @item.MiddleName</td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            <button class="btn btn-danger btn-sm" @onclick="() => DeleteUser(item.Id)">Удалить</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private List<User> _userAll = new List<User>();
    protected override async Task OnInitializedAsync()
    {
        _userAll = await UserServices.GetAllUserAsync();
    }

    private async Task DeleteUser(string id)
    {
        await UserServices.DeleteUser(id);
        _userAll = await UserServices.GetAllUserAsync();
    }
}